[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
Requires=kube-apiserver.service
After=kube-apiserver.service
[Service]
ExecStartPre=/usr/bin/wget -P /opt/bin https://storage.googleapis.com/kubernetes-release/release/{{ COREOS_K8S_MASTER_VERSION }}/bin/linux/amd64/kube-controller-manager
ExecStartPre=/usr/bin/chmod +x /opt/bin/kube-controller-manager
ExecStartPre=/opt/bin/wupiao {{ ansible_env.COREOS_PRIVATE_IPV4 }}:8080
ExecStart=/opt/bin/kube-controller-manager \
  --service_account_private_key_file={{ ansible_user_dir }}/kube-serviceaccount.key \
  --master={{ ansible_env.COREOS_PRIVATE_IPV4 }}:8080 \
  --cloud_provider={{ COREOS_K8S_MASTER_CLOUD_PROVIDER }} \
  --pod_eviction_timeout=30s \
  --logtostderr=true
Restart=always
RestartSec=10
